{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
